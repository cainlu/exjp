{% extends 'base.jinja' %}

{% block head %}
<link href='/css/my_result.css' rel='stylesheet' type='text/css'/>
{% endblock %}

{% block top %}
    <li><a href='/'><b>显示</b></a></li>
    <li><a href='/main/upload/'><b>上传</b></a></li>
    {% if user.is_authenticated() %}
        <li><a><b>{{ user.get_profile().nickname|e }}</b></a></li>
        <li><a href='/account/logout_action/'><b>登出</b></a></li>
    {% else %}
        <li><a href='/account/register/'><b>注册</b></a></li>
        <li><a href='/account/login/'><b>登陆</b></a></li>
    {% endif %}
{% endblock %}

{% block context %}
<div class='templatemo_title'>
{% if state == '1' or state == '2' %}
信息反馈
{% elif state == '3' %}
联系我们
{% elif state == '4' %}
关于我们
{% endif %}
</div><br>
<div class='templatemo_main_context'>
	<div id='result_div'>
	    {% if state == '1' %}
		<img src='/image/tick.png'/>
		<div>{{ message }}</div><br><br><br>
		{% elif state == '2' %}
		<img src='/image/cross.png'/>
		<div>{{ message }}</div><br><br><br>
        {% elif state == '3' %}
	    <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;联系邮箱：qianrenjp@163.com</div><br><br>
	    <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;请在邮件中简短地说明您的要求，并留下联系方式。</div><br><br>
	    <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;我们将尽快与您联系。</div><br><br>
	    {% elif state == '4' %}
        <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;www.qianrenjp.cn是一个吐槽网站，吐槽前任男友女友的极品事情。</div><br><br>
        <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;本网站为非盈利性网站，仅供网友娱乐之用。</div><br><br>
        <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;欢迎更多网友前来吐槽。</div><br><br>
		{% endif %}
		<a href='{% if url %}{{ url }}{% endif %}'>返回继续操作</a>
	</div>
</div>
<br>
{% endblock %}
